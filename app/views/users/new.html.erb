<p><u>User creation</u></p>
<%= form_for @user, url: {action: "create"} do |f| %>
  <%= label_tag 'name:' %>
  <%= f.text_field :name %>
  <br><br>
  <%= label_tag 'email:' %>
  <%= f.text_field :email %>
  <br><br>
  <%= label_tag 'password:' %>
  <%= f.text_field :password %>
  <br><br>
  <%= f.submit "Submit" %>
<% end %>
